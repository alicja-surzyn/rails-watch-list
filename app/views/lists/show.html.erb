
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.pexels.com%2Fsearch%2Fmovie%2520theatre%2F&psig=AOvVaw06JrmBTSFqBlEdMiOScp_h&ust=1693273871680000&source=images&cd=vfe&opi=89978449&ved=0CBAQjRxqFwoTCNiT8u6e_oADFQAAAAAdAAAAABAI)">
  <h1> <%= @list.name %> </h1>
</div>

<div class="container">
  <div class="row my-3">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-12 col-md-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= bookmark.movie.poster_url %>')">
          <%= bookmark.movie.title  %>

          <%= link_to '+', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'card-remove-link' %>
        </div>
        <p> <%= bookmark.movie.overview  %> </p>
        <strong>Comments</strong>
        <p><%= bookmark.comment  %></p>
      </div>
    <% end %>
  </div>

<div><%= cl_image_tag("https://res.cloudinary.com/dphmxctaq/image/upload/v1693183942/cld-sample-5.jpg",
      width: 400, height: 300, crop: :fill)
       %></div>

  <div class="row justify-content-center">
    <div class="col-4">
      <h1>Add a bookmark</h1>

      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie %>
        <%= f.association :list %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>

</div>
